package novosalario;

import java.util.Scanner;

public class novosalario {

	public static void main(String[] args) {
		double salAtual;
		double nvsalario;
		Scanner teclado=new Scanner(System.in);
		System.out.println("Qual o seu salário atual?");
		salAtual= teclado.nextFloat();
		nvsalario= (salAtual*0.25)+salAtual;
		System.out.println("Seu novo salário será de R$"+ nvsalario+salAtual);	}
;
}
